<h1 class="h1"><%- title %></h1>
<%- messages() %>

<%- include("../partials/errors") %>

<h2>Welcome <%- locals.accountData.account_firstname %></h2>

<p><a href="/account/update/<%- locals.accountData.account_id %>">Update account link</a></p>

<% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
<h3>Inventory Management</h3>
<p><a href="/inv">Inventory Management Link</a></p>
<% } %>
<% if (locals.accountData.account_type === "Admin") { %>
<h3>Users Management</h3>
<table id="usersDisplay" data-current-id="<%- locals.accountData.account_id %>"></table>
<noscript>JavaScript must be enabled to use this page.</noscript>
<script src="../../js/users.js"></script>
<% } %>